{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Hosted workbench",
			"type": "msedge",
			"request": "launch",
			//"url": "https://<your-SharePoint-tenant.sharepoint.com>/sites/<your-site>/_layouts/workbench.aspx",
			"url": "${env:VSCODELAUNCHURL}",
			"webRoot": "${workspaceRoot}",
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"sourceMapPathOverrides": {
				"webpack:///.././src/*": "${webRoot}/src/*",
				"webpack:///../../../src/*": "${webRoot}/src/*",
				"webpack:///../../../../src/*": "${webRoot}/src/*",
				"webpack:///../../../../../src/*": "${webRoot}/src/*"
			},
			"runtimeArgs": [
				"--remote-debugging-port=9222",
				"-incognito"
			]
		}
	]
}