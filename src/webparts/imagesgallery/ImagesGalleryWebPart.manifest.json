{
    "$schema": "https://developer.microsoft.com/json-schemas/spfx/client-side-web-part-manifest.schema.json",
    "id": "4ed6a8a4-0d88-4c94-b969-70a87fd2abb8",
    "alias": "LightboxImageGalleryWebPart",
    "componentType": "WebPart",

    // The "*" signifies that the version should be taken from the package.json
    "version": "*",

    "manifestVersion": 2,

    // If true, the component can only be installed on sites where Custom Script is allowed.
    // Components that allow authors to embed arbitrary script code should set this to true.
    // https://support.office.com/article/Turn-scripting-capabilities-on-or-off-1f2c515f-5d7e-448a-9fd7-835da935584f
    "requiresCustomScript": false,

    "supportsFullBleed": true,
    "supportedHosts": [
        "SharePointWebPart",
        "SharePointFullPage"
    ],
    
    "supportsThemeVariants": true,
    "hiddenFromToolbox": false,
    "disabledOnClassicSharepoint": true,

    "preconfiguredEntries": [
        {
            "title": {
                "default": "Lightbox Image Gallery",
                "sk-SK": "Lightbox galéria obrázkov"
            },
            "description": {
                "default": "Display a good looking image gallery using lightbox effects.",
                "sk-SK": "Pridajte zobrazenie rozšírenej galérie fotografií."
            },
            // Toolbox icon: 40x28 px
            "iconImageUrl": "data:image/svg+xml;base64,",
            // App page icon: 123x70 px
            "fullPageAppIconImageUrl": "data:image/svg+xml;base64,",
            "groupId": "cf066440-0614-43d6-98ae-0b31cf14c7c3",      // Text, media, and content
            "properties": {
                "webPartTitle": "",                                 // WebPart Title String.
                "imageLibraryRootFolderUniqueId": "",               // Must be left empty string!
                "imageLibraryFoldersOrderBy": "",                   // Folders order logic
                "imageLibraryFilesOrderBy": ""                      // Files order logic
            }
        }
    ]
}